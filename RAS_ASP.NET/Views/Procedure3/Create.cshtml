@model WebApplication.Data.Entities.CuisineEntity

@{
    ViewData["Title"] = "Create";
}

<h1>Procedure 3</h1>

<h4>Displays total price and count of dish for some cuisine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
