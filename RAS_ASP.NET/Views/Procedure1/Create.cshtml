@model RAS_ASP.NET.Models.OrderProcedure

@{
    ViewData["Title"] = "Create";
}

<h1>Procedure 1</h1>

<h4>Create a new orders in restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="@Model.PayType" asp-items="Html.GetEnumSelectList<RAS_ASP.NET.Models.PaymentType>()"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Dish ID</label>
                <input asp-for="Dish.ID" class="form-control" />
                <span asp-validation-for="Dish.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UseCheck" class="control-label"></label>
                <input asp-for="UseCheck" class="form-control" type="checkbox"/>
                <span asp-validation-for="UseCheck" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                @Html.DisplayFor(model => model.Status)
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/validationlocalization.js"></script>
}
