@model RAS_ASP.NET.Models.DishProcedure

@{
    ViewData["Title"] = "Create";
}

<h1>Procedure 2</h1>

<h4>Create a new dish and displays all dish components</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentCount" class="control-label"></label>
                <input asp-for="ComponentCount" class="form-control" />
                <span asp-validation-for="ComponentCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cuisine ID</label>
                <input asp-for="Cuisine.ID" class="form-control" />
                <span asp-validation-for="Cuisine.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                @Html.DisplayFor(model => model.Status)
            </div>
        </form>
    </div>
            @if (Model.Component.Count > 0)
            {

                    <table id="Table1" runat="server" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Component[0].NeedCount)
                                </th>
                                <th>
                                    @Html.DisplayName("Dish ")
                                    @Html.DisplayNameFor(model => model.Component[0].Dish.ID)
                                </th>
                                <th>
                                    @Html.DisplayName("Product ")
                                    @Html.DisplayNameFor(model => model.Component[0].Product.ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Component[0].ID)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Component)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NeedCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dish.ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product.ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                                </tr>
                            }
                    </table>
            }
       
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/validationlocalization.js"></script>
}
