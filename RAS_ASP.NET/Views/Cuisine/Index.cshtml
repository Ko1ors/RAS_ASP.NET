@model IEnumerable<WebApplication.Data.Entities.CuisineEntity>

@{
    ViewData["Title"] = "Index";
}

<h1>Cuisines</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CooksNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageDish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DishesSummary)
            </th>
            <th>
                @Html.DisplayName("Restaurant ")
                @Html.DisplayNameFor(model => model.Restaurant.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CooksNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageDish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishesSummary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
